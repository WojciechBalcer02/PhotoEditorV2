<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#595959">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by Wojciech Balcer"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/zdj"
        android:layout_marginTop="50dp"
        android:id="@+id/image"
        />
    <ImageView
        android:layout_width="194dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="#FF0000"
        android:layout_marginTop="50dp"
        android:id="@+id/red"
        />
    <ImageView
        android:layout_width="194dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="#00FF00"
        android:layout_marginTop="50dp"
        android:id="@+id/green"
        />
    <ImageView
        android:layout_width="194dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="#0000FF"
        android:layout_marginTop="50dp"
        android:id="@+id/blue"
        />
    <SeekBar
        android:id="@+id/visibility"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="20dp"
        android:max="250"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transparency"
        android:layout_toRightOf="@+id/visibility"
        android:layout_below="@+id/image"
        android:layout_marginTop="20dp"
        />
    <SeekBar
        android:id="@+id/redValue"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visibility"
        android:layout_marginTop="20dp"
        android:max="250"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:layout_toRightOf="@+id/visibility"
        android:layout_below="@+id/visibility"
        android:layout_marginTop="20dp"
        />
    <SeekBar
        android:id="@+id/greenValue"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/redValue"
        android:layout_marginTop="20dp"
        android:max="250"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:layout_toRightOf="@+id/visibility"
        android:layout_below="@+id/redValue"
        android:layout_marginTop="20dp"
        />
    <SeekBar
        android:id="@+id/blueValue"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greenValue"
        android:layout_marginTop="20dp"
        android:max="250"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        android:layout_toRightOf="@+id/visibility"
        android:layout_below="@+id/greenValue"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blueValue"
        android:layout_marginTop="10dp"
        android:text="rotate"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>